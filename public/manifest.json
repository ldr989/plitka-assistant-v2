{
    "name": "3Dplitka Assistant",
    "description": "Помощник контент-менеджера",
    "version": "2.0",
    "manifest_version": 3,
    "permissions": ["sidePanel", "scripting", "activeTab"],
    "host_permissions": ["*://*.3dplitka.ru/*"],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Открыть"
    },
    "background": {
        "service_worker": "background.js"
    }
}
